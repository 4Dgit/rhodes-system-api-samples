<div id="pageTitle">
	<h1>Edit <%= @uiformdemo.textbox%></h1>
</div>

<div id="toolbar">
    <div id="leftItem" class="backButton"><%= link_to "Cancel", :action => :show, :id => @uiformdemo.object %></div>
    <div id="rightItem" class="regularButton"><%= link_to "Delete", :action => :delete, :id => @uiformdemo.object %></div>
</div>

<div id="content">
    <form method="POST" action="<%= url_for :action => :update %>">
            <input type="hidden" name="id" value="<%= @uiformdemo.object %>"/>
            <ul>
                <li>
                    <label for="uiformdemo[textbox1]" class="fieldLabel">Textbox1</label>
                    <input type="text" name="uiformdemo[textbox1]" value="<%= @uiformdemo.textbox1%>" <%= placeholder( "Textbox1" ) %> />
                </li>
                <li>
                    <label for="uiformdemo[textbox2]" class="fieldLabel">Textbox2</label>
                    <input type="text" name="uiformdemo[textbox2]" value="<%= @uiformdemo.textbox2%>" <%= placeholder( "Textbox2" ) %> />
                </li>
                <li>
                    <label for="uiformdemo[textbox3]" class="fieldLabel">Textbox3</label>
                    <input type="text" name="uiformdemo[textbox3]" value="<%= @uiformdemo.textbox3%>" <%= placeholder( "Textbox3" ) %> />
                </li>
            </ul>

            <ul>
                <li>
                    <label for="uiformdemo[checkbox]">Checkbox1</label>
                    <input type="checkbox" name="uiformdemo[checkbox1]" value="<%= @uiformdemo.checkbox1%>" />
                </li>
                <li>
                    <label for="uiformdemo[checkbox]">Checkbox2</label>
                    <input type="checkbox" name="uiformdemo[checkbox2]" value="<%= @uiformdemo.checkbox2%>" />
                </li>
                <li>
                    <label for="uiformdemo[checkbox]">Checkbox3</label>
                    <input type="checkbox" name="uiformdemo[checkbox3]" value="<%= @uiformdemo.checkbox3%>" />
                </li>
            </ul>

            <ul>
                <li>
                    <label for="uiformdemo[radiobutton]">Radio Button 1</label>
                    <input type="radio" name="uiformdemo[radiobutton]" value="radiobutton1"/>
                </li>
                <li>
                    <label for="uiformdemo[radiobutton]">Radio Button 2</label>
                    <input type="radio" name="uiformdemo[radiobutton]" value="radiobutton2"/>
                </li>
                <li>
                    <label for="uiformdemo[radiobutton]">Radio Button 3</label>
                    <input type="radio" name="uiformdemo[radiobutton]" value="radiobutton3"/>
                </li>
            </ul>

            <ul>
                <li>
                    <select name="uiformdemo[selectbox]">
                        <option selected>Please select</option>
                        <option value="apple">iPhone</option>
                        <option value="android">Android</option>
                        <option value="blackberry">BlackBerry</option>
                        <option value="winmo">Windows Mobile</option>
                    </select>
                </li>
            </ul>

            <ul>
                <li class="textarea">
                    <textarea name="uiformdemo[textarea]" rows="5" cols="30"><%= @uiformdemo.textarea%></textarea>
                </li>
            </ul>
            <input type="submit" class="standardButton" value="Update" />
    </form>
</div>