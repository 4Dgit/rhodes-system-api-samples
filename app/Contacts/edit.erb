<div class="toolbar">
  <h1 id="pageTitle">
    Edit Contact
  </h1>
</div>
<form title="Edit Contact"
   class="panel"
   id="contact_edit_form"
   method="POST"
   action="<%=url_for(:action => :update)%>">
  <fieldset>

  <input type="hidden" name="contact[id]" value="<%=@contact['id']%>"/>

  <%
  possibleValues = ["first_name", "last_name", "mobile_number", "home_number",
    "business_number", "email_address", "company_name"]

  if System::get_property('platform') == "APPLE"
    possibleValues = ["prefix", "first_name", "middle_name", "last_name", "suffix",
    "nickname","birthday", "anniversary", "created", "updated","company_name",
    "job_title", "assistant_name", "assistant_number","spouse_name", "person_note",
    "street_address_1", "city_1", "state_1", "zip_1", "country_1",
    "street_address_2", "city_2", "state_2", "zip_2", "country_2",
    "street_address_3", "city_3", "state_3", "zip_3", "country_3",
    "email_address", "home_email_address", "other_email_address",
    "business_number", "home_number", "mobile_number", "main_number", "pager_number",
    "home_fax", "work_fax", "home_page"]
  end

  possibleValues.each do |value| %>
    <div class="row">
      <label><%=value%>:</label>
      <input type="text" name="contact[<%=value%>]" value="<%=@contact[value]%>"/>
  </div>
  <% end %>


  </fieldset>
  <input type="submit" value="Update"/>
  <div align="center">
    <a href="<%=url_for(:action => :delete, :id => @contact['id'])%>">
      <font color="#990000">Delete</font>
    </a>
  </div>
</form>